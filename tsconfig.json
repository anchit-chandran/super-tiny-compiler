{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",   // Ensure compiled files are stored in 'dist'
    "rootDir": "src"    // Assuming your .ts files are in a 'src' directory
  },
  "include": ["src/**/*.ts"],  // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"]
}
